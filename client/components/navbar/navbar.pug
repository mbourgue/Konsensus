div.navbar.navbar-default.navbar-statictop
  div.container-fluid
    div.navbar-header
      button.navbar-toggle(type='button', ng-click='$ctrl.isCollapsed = !$ctrl.isCollapsed')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        img.logo(src="/assets/images/logo.png", alt="")

        //- div.input-group.col-xs-6
    //- input.form-control(type="text" placeholder="Recherche" aria-describedby="basic-addon2")
    //- span.input-group-addon.basic-addon2 search

    div#navbar-main.navbar-collapse.collapse(uib-collapse='$ctrl.isCollapsed')
      ul.menu.nav.navbar-nav
        li(ng-repeat='item in $ctrl.menu', ui-sref-active='active')
          a(ui-sref='{{item.state}}') {{item.title}}

        li(ng-show='$ctrl.isAdmin()', ui-sref-active='active')
          a(ui-sref='admin') Admin
        
        li(ui-sref-active='active')
          a(ui-sref='subjects') Explore

        li(ui-sref-active='active')
          a(href="#") How it Work

        li.new-subject(ng-show='$ctrl.isLoggedIn()', ui-sref-active='active')
          a(ui-sref='subjects_create')
            span.fa.fa-plus
      
      //- div(style="margin: auto;")
      //- searchbar

      ul.nav.navbar-nav.navbar-right
        li(ng-hide='$ctrl.isLoggedIn()', ui-sref-active='active')
          a.sign-in.btn.btn-default(ui-sref='login') Sign In
        li(ng-hide='$ctrl.isLoggedIn()', ui-sref-active='active')
          a.sign-up.btn.btn-default(ui-sref='signup') Sign Up


